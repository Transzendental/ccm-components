{
  "main": {
    "tag": "div",
    "class": "userStorys"
  },
  "usTable": {
    "tag": "table",
    "class": "usTable"
  },
  "usTableHeader": {
      "tag": "tr",
      "inner": [
        {
          "tag": "th",
          "id": "name",
          "inner": "NAME"
        },
        {
          "tag": "th",
          "id": "descr",
          "inner": "BESCHREIBUNG"
        },
        {
          "tag": "th",
          "id": "cost",
          "inner": "AUFWAND"
        },
        {
          "tag": "th",
          "id": "user",
          "inner": "USER"
        }
      ]
  },
  "userStory": {
    "tag": "tr",
    "class": "userStory",
    "id": "%id%",
    "inner": [
      {
        "tag": "td",
        "class": "name",
        "inner": "%name%"
      },
      {
        "tag": "td",
        "class": "text",
        "inner": "%text%"
      },
      {
        "tag": "td",
        "class": "aufwand",
        "inner": "%aufwand%"
      },
      {
        "tag": "td",
        "class": "user",
        "inner": "%user%"
      },
      {
        "tag": "input",
        "class": "btnDone",
        "type": "submit",
        "value": "Done",
        "onclick": "%clickDone%"
      },
      {
        "tag": "input",
        "class": "btnDelete",
        "type": "submit",
        "value": "Delete",
        "onclick": "%clickDelete%"
      }
    ]
  },
  "input": {
    "tag": "div",
    "class": "newUs",
    "inner": {
      "tag": "form",
      "inner": [
        {
          "tag": "input",
          "class": "inputName",
          "placeholder": "Name"
        },
        {
          "tag": "textarea",
          "class": "inputText",
          "placeholder": "Beschreibung"
        },
        {
          "tag": "input",
          "class": "inputAufwand",
          "placeholder": "Aufwand"
        },
        {
          "tag": "input",
          "type": "submit",
          "value": "Send"
        }
      ],
      "onsubmit": "%onsubmit%"
    }
  }
}
